<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.screen.learn.flashcard.FlashcardActivity"
    android:background="#F4F4F4">

    <LinearLayout
        android:id="@+id/text_learn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/txt_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_20"
            android:text="JPD111"
            android:textSize="@dimen/sp_30"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_lesson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_20"
            android:text="Lesson 1"
            android:textSize="@dimen/sp_30"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_learn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_questionNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_totalQuestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:textSize="16sp" />
    </LinearLayout>
    <ProgressBar
        android:id="@+id/progressBarFlashcard"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="130dp"
        android:max="100" />
    <com.wajahatkarim3.easyflipview.EasyFlipView
        android:id="@+id/flash_card"
        android:layout_width="@dimen/dp_400"
        android:layout_height="@dimen/dp_400"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="@dimen/dp_20"
        app:autoFlipBack="false"
        app:flipDuration="350"
        app:flipEnabled="true"
        app:flipFrom="right"
        app:flipOnTouch="true"
        app:flipType="horizontal">

        <include layout="@layout/flashcard_layout_back" />

        <include layout="@layout/flashcard_layout_front" />
    </com.wajahatkarim3.easyflipview.EasyFlipView>

    <LinearLayout
        android:layout_width="276dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/flash_card"
        android:layout_centerHorizontal="true">
        <Button
            android:id="@+id/btn_flashcard_previous"
            android:layout_width="@dimen/dp_40"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_arrow_back" />

        <Button
            android:id="@+id/button2"
            android:layout_width="98dp"
            android:layout_height="wrap_content"
            android:text="Finish" />

        <Button
            android:id="@+id/btn_flashcard_next"
            android:layout_width="@dimen/dp_40"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_arrow_next" />
    </LinearLayout>

</RelativeLayout>