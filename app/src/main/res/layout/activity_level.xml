<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.screen.kanji.KanjiLevelActivity">

    <TextView
        android:id="@+id/text_level_name"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:text="JPD111"
        android:textStyle="bold"
        android:textSize="35dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/btn_learn"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginLeft="37dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/text_level_name"
        android:background="@drawable/ripple_effect_button"
        android:text="LEARN"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btn_test"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginLeft="31dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/btn_learn"
        android:background="@drawable/ripple_effect_button"
        android:text="TEST"
        android:textSize="20dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_level"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottomNavigation"
        android:layout_below="@+id/text_level_name"
        android:layout_marginTop="15dp" />
    <include
        android:id="@+id/bottomNavigation"
        layout="@layout/bottom_navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>