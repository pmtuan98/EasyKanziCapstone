<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.screen.kanji.KanjiByLevelActivity">

    <TextView
        android:id="@+id/text_level_name"
        android:layout_width="@dimen/dp_130"
        android:layout_height="@dimen/dp_50"
        android:text="JPD111"
        android:textStyle="bold"
        android:textSize="@dimen/dp_35"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"/>

    <Button
        android:id="@+id/btn_learn"
        android:layout_width="@dimen/dp_90"
        android:layout_height="@dimen/dp_40"
        android:layout_marginLeft="@dimen/dp_35"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_toRightOf="@+id/text_level_name"
        android:background="@drawable/ripple_effect_button"
        android:text="LEARN"
        android:textSize="@dimen/dp_20" />

    <Button
        android:id="@+id/btn_test"
        android:layout_width="@dimen/dp_90"
        android:layout_height="@dimen/dp_40"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_toRightOf="@+id/btn_learn"
        android:background="@drawable/ripple_effect_button"
        android:text="TEST"
        android:textSize="@dimen/dp_20" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_level"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottomNavigation"
        android:layout_below="@+id/text_level_name"
        android:layout_marginTop="@dimen/dp_15" />
    <include
        android:id="@+id/bottomNavigation"
        layout="@layout/bottom_navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>