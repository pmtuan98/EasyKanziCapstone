<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.screen.kanji.KanjiByLevelActivity">

    <TextView
        android:id="@+id/text_level_name"
        android:layout_width="@dimen/dp_130"
        android:layout_height="@dimen/dp_50"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:text="JPD111"
        android:textSize="@dimen/dp_35"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_learn"
        android:layout_width="@dimen/dp_90"
        android:layout_height="@dimen/dp_40"
        android:layout_marginStart="38dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="31dp"
        android:layout_toRightOf="@+id/text_level_name"
        android:background="@drawable/ripple_effect_button"
        android:text="LEARN"
        android:textSize="@dimen/dp_20"
        app:layout_constraintEnd_toStartOf="@+id/btn_test"
        app:layout_constraintStart_toEndOf="@+id/text_level_name"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_test"
        android:layout_width="@dimen/dp_90"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        android:layout_toRightOf="@+id/btn_learn"
        android:background="@drawable/ripple_effect_button"
        android:text="TEST"
        android:textSize="@dimen/dp_20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/learn_method"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:text="Kanji list"
        android:textSize="@dimen/sp_18"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_level_name" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_level"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_above="@+id/bottomNavigation"
        android:layout_below="@+id/text_level_name"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView1" />

    <include
        android:id="@+id/bottomNavigation"
        layout="@layout/bottom_navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>