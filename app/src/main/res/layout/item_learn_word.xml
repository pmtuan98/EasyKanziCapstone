<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@drawable/bg_learn_word"
    android:layout_margin="4dp"
    android:elevation="5dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tvKanji"
        android:layout_width="105dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="本"
        android:textColor="#000000"
        android:textSize="@dimen/sp_20"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvHira"
        android:layout_width="105dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="にほん"
        android:textColor="#03A9F4"
        android:textSize="@dimen/sp_20" />


    <TextView
        android:id="@+id/tvVietnamese"
        android:layout_width="105dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:fontFamily="@font/circularstdbook"
        android:text="Nhật Bản"
        android:textSize="@dimen/sp_18" />

    <ImageButton
        android:id="@+id/btnStar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:background="@drawable/ic_baseline_star_border_24"/>


</LinearLayout>