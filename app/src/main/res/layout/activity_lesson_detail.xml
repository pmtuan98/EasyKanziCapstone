<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.screen.lesson.KanjiByLessonActivity">

    <TextView
        android:id="@+id/tvLevel"
        android:layout_width="@dimen/dp_130"
        android:layout_height="@dimen/dp_50"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:text="JPD111"
        android:textSize="@dimen/dp_35"
        android:fontFamily="@font/roboto_bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnLearn"
        android:layout_width="@dimen/dp_90"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="8dp"
        android:layout_toRightOf="@+id/tvLevel"
        android:background="@drawable/btn_custom"
        android:fontFamily="@font/roboto_bold"
        android:text="LEARN"
        android:textColor="@android:color/white"
        android:textSize="@dimen/dp_20"
        app:layout_constraintEnd_toStartOf="@+id/btnTest"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnTest"
        android:layout_width="@dimen/dp_90"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="8dp"
        android:layout_toRightOf="@+id/btnLearn"
        android:background="@drawable/btn_custom"
        android:fontFamily="@font/roboto_bold"
        android:text="TEST"
        android:textColor="@android:color/white"
        android:textSize="@dimen/dp_20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/learnMethod"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:text="Kanji list"
        android:textColor="#000000"
        android:fontFamily="@font/roboto_bold"
        android:textSize="@dimen/sp_18"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvLevel" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewLevel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView1" />

    <include
        android:id="@+id/bottomNavigation"
        layout="@layout/bottom_navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>