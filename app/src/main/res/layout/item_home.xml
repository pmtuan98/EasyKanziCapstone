<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="2dp"
    app:cardElevation="10dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">
        <ImageView
            android:id="@+id/image_homepage"
            android:layout_width="75dp"
            android:layout_height="75dp"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/tvTitleLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="JPD111"
            android:textColor="#000000"
            android:textSize="22dp"
            android:fontFamily="@font/circularstdbold"
            android:layout_toRightOf="@+id/image_homepage"
            android:layout_toEndOf="@+id/image_homepage"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="20dp"/>

        <TextView
            android:id="@+id/tvLevelDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This is a description about JPD"
            android:textColor="#a9a9a9"
            android:textSize="16dp"
            android:fontFamily="@font/circularstdbook"
            android:layout_toRightOf="@+id/image_homepage"
            android:layout_toEndOf="@+id/image_homepage"
            android:layout_below="@+id/tvTitleLevel"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>