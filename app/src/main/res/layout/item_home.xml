<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="6dp"
    android:layout_marginEnd="6dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="6dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/image_homepage"
            android:layout_width="75dp"
            android:layout_height="75dp"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/tvTitleLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/image_homepage"
            android:layout_toRightOf="@+id/image_homepage"
            android:fontFamily="@font/roboto_bold"
            android:textColor="#000000"
            android:textSize="22dp" />

        <TextView
            android:id="@+id/tvLevelDescription"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvTitleLevel"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/image_homepage"
            android:layout_toRightOf="@+id/image_homepage"
            android:fontFamily="@font/roboto_regular"
            android:textColor="#69696C"
            android:textSize="16dp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>